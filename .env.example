# Node Environment
# Options: development, production, test
NODE_ENV="development"

# Database Configuration
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
# For Docker setup (recommended): Use the connection string below
DATABASE_URL="postgresql://aikeedo:password@localhost:5433/aikeedo_dev"

# NextAuth Configuration
# Generate a secure secret with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"
# The base URL of your application
NEXTAUTH_URL="http://localhost:3000"

# Email (SMTP) Configuration
# SMTP server hostname
SMTP_HOST="smtp.example.com"
# SMTP server port (usually 587 for TLS, 465 for SSL, 25 for non-secure)
SMTP_PORT="587"
# SMTP authentication username
SMTP_USER="your-email@example.com"
# SMTP authentication password
SMTP_PASSWORD="your-smtp-password"
# Email address to send from
SMTP_FROM="noreply@aikeedo.com"

# Application URL (optional, defaults to NEXTAUTH_URL)
# Used for generating links in emails
APP_URL="http://localhost:3000"

# Session Configuration (optional)
# Session expiration time in seconds (default: 2592000 = 30 days)
SESSION_MAX_AGE="2592000"

# Security Configuration (optional)
# Bcrypt salt rounds for password hashing (default: 12, range: 10-15)
BCRYPT_ROUNDS="12"

# Optional: Redis Configuration
# Redis connection string for caching
# REDIS_URL="redis://localhost:6379"

# Optional: Error Tracking
# Sentry DSN for error tracking
# SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# Optional: Rate Limiting
# Redis connection string for rate limiting
# RATE_LIMIT_REDIS_URL="redis://localhost:6379"

# AI Provider API Keys
# Note: You can use individual provider keys OR use OpenRouter for unified access

# RECOMMENDED: OpenRouter (Unified API for 100+ models)
# OpenRouter provides access to all major AI providers through a single API key
# Get your FREE API key from: https://openrouter.ai/keys (NO CREDIT CARD REQUIRED)
# Benefits: One key, 100+ models, FREE models available, automatic fallback
OPENROUTER_API_KEY="your-openrouter-api-key-here"

# Optional: Individual Provider Keys (if not using OpenRouter)
# OpenAI API key for text, image, speech, and transcription services
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY="your-openai-api-key-here"

# Anthropic API key for Claude models
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY="your-anthropic-api-key-here"

# Google AI API key for Gemini models
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_AI_API_KEY="your-google-ai-api-key-here"

# Mistral AI API key
# Get your API key from: https://console.mistral.ai/
MISTRAL_API_KEY="your-mistral-api-key-here"

# ElevenLabs API key for high-quality text-to-speech
# Get your API key from: https://elevenlabs.io/
# Free tier: 10,000 characters/month
ELEVENLABS_API_KEY="your-elevenlabs-api-key-here"

# Stripe Configuration
# Stripe secret key for server-side operations
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key-here"
# Stripe publishable key for client-side operations
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key-here"
# Stripe webhook secret for webhook signature verification
# Get this from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret-here"

# File Storage Configuration (S3/R2)
# Storage provider: "s3" for AWS S3, "r2" for Cloudflare R2, "local" for local storage
STORAGE_PROVIDER="local"
# S3/R2 Region (e.g., "us-east-1" for S3, "auto" for R2)
STORAGE_REGION="us-east-1"
# S3/R2 Bucket name
STORAGE_BUCKET="aikeedo-uploads"
# S3/R2 Access Key ID
STORAGE_ACCESS_KEY_ID=""
# S3/R2 Secret Access Key
STORAGE_SECRET_ACCESS_KEY=""
# S3/R2 Endpoint (required for R2, optional for S3)
# For Cloudflare R2: https://<account-id>.r2.cloudflarestorage.com
STORAGE_ENDPOINT=""
# Public URL for accessing files (CDN URL or bucket URL)
STORAGE_PUBLIC_URL=""
# Force path style for S3 (set to "true" for R2 and MinIO)
STORAGE_FORCE_PATH_STYLE="false"
